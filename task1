
let liste=document.querySelector("ul")
let button=document.querySelector("button")
button.addEventListener("click",add)
let input=document.querySelector("input")

input.innerHTML

function add(){
    if ( input.value=="") {
        alert("try to type something");
    }
    else{
        liste.innerHTML+=`<li> <input type="checkbox" id="check">  ${input.value} <button onclick="del()">delete</button> </li>`;

    input.value="";
}
}

document.body.addEventListener("keypress", (e)=>{
    if (e.key=="Enter"){
        add()
     }
})
let check=document.getElementById("check")
input.addEventListener(check,chocher)
function chocher()
    if(check.checked){
        input.value.style.textdecoration="line-through";

    }






